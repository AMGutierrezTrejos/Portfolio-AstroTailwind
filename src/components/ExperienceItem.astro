---
import LinkInline from './LinkInline.astro';

 interface Props {
    title: string
    description: string
    imgExp:string
    link?: string
    date: string
    company: string
}
const  {title, description, link, date, company, imgExp } = Astro.props
---

<div
  class="relative mx-12 pb-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-white dark:before:border-white/15 before:content-[''] md:grid-cols-5 md:gap-10 md:space-x-4]"
  
>
  <div class="relative pb-12 md:col-span-2">
    <div class="sticky top-0">
      <span class="text-white -left-[55px] absolute rounded-full text-sm ">
        <img src="https://i.ibb.co/ZcyD4f4/macbook-pro-svgrepo-com.png" alt="Gamepad" class="size-10"/>
      </span>
      

      <h3 class="text-xl font-bold text-green-400">{title}</h3>
      <div class="flex items-center">
        <img src={imgExp} alt="Experience" class="size-7 mr-2" />
        <h4 class="font-semibold text-xl text-white-600 dark:text-white">{company}</h4>
      </div>      <time class="p-0 m-0 text-sm text-white dark:text-white/80">{date}</time>
    </div>
  </div>
  <div class="relative flex flex-col gap-2 pb-4 text-white dark:text-gray-300 md:col-span-3">
    {description}
    {
      link && (
        <LinkInline href={link}>
          Saber m√°s{" "}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-5 icon icon-tabler icon-tabler-chevron-right"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <>
              <path stroke="none" d="M0 0h24v24H0z" fill="none" />
              <path d="M9 6l6 6l-6 6" />
            </>
          </svg>
        </LinkInline>
      )
    }
  </div>
</div>