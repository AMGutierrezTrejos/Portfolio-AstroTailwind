import NodeIcon from './icons/NodeIcon.astro';
import CssIcon from './icons/CssIcon.astro';
import ViteIcon from './icons/ViteIcon.astro';


const TAGS = {
  REACT: {
    name: "React.js",
    class: "bg-[#003159] text-white",
    icon: ReactIcon,
  },
  TAILWIND: {
    name: "TailwindCSS",
    class: "bg-[#003159] text-white",
    icon: TailwindIcon,
  },
  MONGODB: {
    name: "MongoDB",
    class: "bg-[#003159] text-white",
    icon: MongoDBIcon,
  },
  REDUX: {
    name: "Redux",
    class: "bg-[#003159] text-white",
    icon: ReduxIcon,
  },
  AUTH0: {
    name: "Auth0",
    class: "bg-[#003159] text-white",
    icon: Auth0Icon,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-[#003159] text-white",
    icon: JavaScriptIcon,
  },
  VERCEL: {
    name: "Vercel",
    class: "bg-[#003159] text-white",
    icon: VercelIcon,
  },
  POSTGRES: {
    name: "PostgreSQL",
    class: "bg-[#003159] text-white",
    icon: PostgresIcon,
  },
  TYPESCRIPT: {
    name: "TypeScript",
    class: "bg-[#003159] text-white",
    icon: TypescriptIcon,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-[#003159] text-white",
    icon: AstroIcon,
  },
  SEQUELIZE: {
    name: "Sequelize",
    class: "bg-[#003159] text-white",
    icon: SequelizeIcon,
